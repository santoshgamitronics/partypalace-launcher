{
  "name": "party-nite-launcher",
  "version": "1.0.1",
  "description": "A windows/mac launcher for partyNite",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --exec electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/gami-256x256.icns --prune=true --out=release-builds",
    "package-win-64": "electron-packager . --overwrite --platform=win32 --arch=x64 --icon=assets/icons/win/gami-256x256.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"PartyNiteLauncher\"",
    "package-win-32": "electron-packager . --overwrite --platform=win32 --arch=ia32 --icon=assets/icons/win/gami-256x256.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"PartyNiteLauncher\""
  },
  "author": "Santosh Kumar M",
  "license": "ISC",
  "devDependencies": {
    "electron": "^15.3.0",
    "electron-packager": "^15.2.0",
    "nodemon": "^2.0.6"
  },
  "dependencies": {
    "electron-dl": "^3.3.0",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.0.1",
    "electron-updater": "^4.3.9",
    "update-electron-app": "^2.0.1"
  }
}
